<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/ibMainCalorieReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resetimage"
            android:backgroundTint="#EAEAEA"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식 이름"
                android:textSize="20sp"
                android:textColor="#446280"
                android:layout_marginHorizontal="30dp" />
            <AutoCompleteTextView
                android:id="@+id/tvMainAutoText1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:hint="입력하세요"
                android:gravity="center"
                android:completionThreshold="1"
                android:maxLines="2"
                android:layout_marginHorizontal="30dp"
                android:dropDownWidth="150dp"/>
            <ImageButton
                android:id="@+id/ibMainFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:backgroundTint="#EAEAEA"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식 인분"
                android:textSize="20sp"
                android:textColor="#446280"
                android:layout_marginHorizontal="30dp"/>
            <EditText
                android:id="@+id/etMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="입력하세요"
                android:maxLines="1"
                android:layout_marginHorizontal="30dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnMainConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:backgroundTint="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tvMainText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#446280"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="  :  "
                android:textSize="20sp"
                android:textColor="#446280"/>
            <TextView
                android:id="@+id/tvMainText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#446280"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvMainText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:lines="4"/>
        <ProgressBar
            android:id="@+id/pbMainbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#ff4400"
            android:layout_marginTop="30dp"
            android:progressDrawable="@drawable/progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMainCalorieBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#446280"/>
            <Button
                android:id="@+id/btnMainReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EAEAEA"
                android:textColor="#000000"
                android:text="reset"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tvMainCalorieBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Max"
                android:textSize="20sp"
                android:textColor="#446280"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
            <ImageButton
                android:id="@+id/ibload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/loadimage"
                android:tint="#000000"/>
            <ImageButton
                android:id="@+id/ibMainExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/exerciseimage"
                android:tint="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>