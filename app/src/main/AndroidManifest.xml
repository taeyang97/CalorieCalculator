<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caloriecalculator">
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_caloriecarculator"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_caloriecarculator"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalorieCalculator">
        <activity android:name=".ExercisePage"></activity>
        <activity android:name=".SettingPage" />
        <activity
            android:name=".LogoPage"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loadpage.LoadPage" />
        <activity android:name=".MainPage"
            android:windowSoftInputMode="adjustResize|adjustPan"/>
    </application>

</manifest>